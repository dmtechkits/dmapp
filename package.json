{
  "name": "dmapp",
  "description": "next.js ts starter",
  "scripts": {
    "dev": "nodemon",
    "build": "next build && tsc && tsc --project tsconfig.server.json",
    "start": "cross-env NODE_ENV=production ts-node --project tsconfig.server.json src/server/",
    "lint": "tslint --project tsconfig.json -c tslint.json --fix",
    "pretty": "prettier 'pages/**/*.t{s,sx}' 'src/**/*.t{s,sx}' '*.js' --write",
    "postinstall": "link-module-alias",
    "preinstall": "command -v link-module-alias && link-module-alias clean || true",
    "start:server": "NODE_ENV=development nodemon --config ./nodemon-api.json",
    "generate": "gql-gen",
    "create:db": "ts-node src/api/scripts/create-db.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "cover": "jest --coverage",
    "pretest": "yarn postinstall"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "yarn pretty",
      "yarn lint",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "_moduleAliases": {
    "~utils": "src/utils",
    "~api": "src/api",
    "~types": "src/types"
  },
  "dependencies": {
    "@rebass/grid": "^6.0.0",
    "apollo-errors": "^1.9.0",
    "apollo-server-core": "^2.5.1",
    "apollo-server-express": "^2.5.1",
    "axios": "^0.19.0",
    "bcryptjs": "^2.4.3",
    "class-validator": "^0.9.1",
    "connect-redis": "^3.4.1",
    "cors": "^2.8.5",
    "dotenv-safe": "^6.1.0",
    "express": "^4.17.1",
    "express-session": "^1.16.1",
    "graphql": "^14.3.1",
    "graphql-redis-subscriptions": "^2.1.0",
    "graphql-subscriptions": "^1.1.0",
    "helmet": "^3.18.0",
    "iconv-lite": "^0.4.24",
    "ioredis": "^4.9.5",
    "mysql2": "^1.6.5",
    "next": "^8.1.0",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "reflect-metadata": "^0.1.13",
    "sitemap": "^2.2.0",
    "slugify": "^1.3.4",
    "sqlite3": "^4.0.8",
    "styled-components": "^4.2.1",
    "type-graphql": "^0.17.4",
    "typeorm": "^0.2.17",
    "uuid": "^3.3.2",
    "yup": "^0.27.0"
  },
  "devDependencies": {
    "@babel/core": "^7.4.5",
    "@types/bcryptjs": "^2.4.2",
    "@types/connect-redis": "^0.0.10",
    "@types/express": "^4.16.1",
    "@types/express-session": "^1.15.12",
    "@types/graphql": "^14.2.0",
    "@types/helmet": "^0.0.43",
    "@types/ioredis": "^4.0.10",
    "@types/jest": "^24.0.13",
    "@types/next": "^8.0.1",
    "@types/react": "^16.8.8",
    "@types/rebass__grid": "^6.0.5",
    "@types/styled-components": "^4.1.15",
    "@types/uuid": "^3.4.4",
    "@types/yup": "^0.26.13",
    "@zeit/next-typescript": "^1.1.1",
    "babel-plugin-module-resolver": "^3.2.0",
    "babel-plugin-styled-components": "^1.10.0",
    "cross-env": "^5.2.0",
    "enzyme": "^3.9.0",
    "husky": "^2.3.0",
    "jest": "^24.8.0",
    "link-module-alias": "^1.2.0",
    "lint-staged": "^8.1.7",
    "nodemon": "^1.19.1",
    "prettier": "1.17.1",
    "ts-jest": "^24.0.2",
    "ts-node": "^8.2.0",
    "tsconfig-paths": "^3.8.0",
    "tslint": "^5.17.0",
    "tslint-config-airbnb": "^5.11.1",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.5.1"
  },
  "license": "MIT"
}
